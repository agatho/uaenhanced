          <tmpl:ARTEFACT><input type="radio" name="myartefacts" id="myartefacts{artefactID}" value="{artefactID}"><label>{name}</label><br></tmpl:ARTEFACT>
          <input name="myartefacts" id="myartefactsnone" type="radio" value="-1" checked><label for="myartefactsnone">keines</label>
        </fieldset>
        </tmpl:ARTEFACTS>
      </td>

      <td valign="top">
        <fieldset>
          <legend>Bewegungsart:</legend>
            <input type="radio" name="movementID" id="movementID0" value="0" checked><label for="movementID0"><em>W&auml;hle eine Bewegung</em></label><br>
            <tmpl:SELECTACTION>
            <input type="radio" name="movementID" id="movementID{id}" value="{id}" onFocus="dur();" onClick="dur();" onChange="dur();" onKeydown="dur();" onKeyup="dur();"><label for="movementID{id}">{description}<script type="text/javascript">uamoves[{id}] = {speedfactor:{speedfactor}, foodfactor:{foodfactor}};</script></label><br>
            </tmpl:SELECTACTION>
        </fieldset>
      </td>

    </tr>
    <tr>
      <td valign="top">
        <fieldset>
          <legend>Ziel:</legend>
          <p>
            <label for="targetXCoord">x:</label> <input id="targetXCoord" name="targetXCoord" value="{targetXCoord}" type="text" size="4" maxlength="4" onFocus="dur();" onClick="dur();" onChange="dur();" onKeydown="dur();" onKeyup="dur();">
            <label for="targetYCoord">y:</label> <input id="targetYCoord" name="targetYCoord" value="{targetYCoord}" type="text" size="4" maxlength="4" onFocus="dur();" onClick="dur();" onChange="dur();" onKeydown="dur();" onKeyup="dur();">
          </p>
