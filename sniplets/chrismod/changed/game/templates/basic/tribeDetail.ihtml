          <td align="center" valign="top">
            <img src="%gfx%/t_basic/profile/ugaagga.gif" cellspacing="6">          
          </td>
        </tr>
        <tr>
          <td align="center">
            <tmpl:LOGO>
              <img src="{logo}" width="{width}" height="{height}" border="0"><br>
            </tmpl:LOGO>
            &nbsp;
          </td>
        </tr>
        <tr>
          <td align="center" style="font-family: Verdana, Arial; color: #000000">
