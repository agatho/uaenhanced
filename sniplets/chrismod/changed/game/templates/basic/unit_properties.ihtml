window.outerHeight = 540;
window.outerWidth = 800;

document.write("<table width=\"100%\"><tr><td align=\"right\"><a href=\"#\" onclick=\"window.close();\">Fenster schlie&szlig;en<\/a><\/td><\/tr><\/table>");

</script>
</p>
